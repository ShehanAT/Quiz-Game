
<style>
/*Strip the ul of padding and list styling*/
.wrapper{
  width: 100%;
  display: inline-block;
}
ul.hidden{
    position: absolute;
    top: 50px;
}
ul#menu {
    display: flex;
    width: 100%;
    list-style-type:none;
    margin:0;
    padding:0;
    position: absolute;
}
/*Create a horizontal list with spacing*/
li.nav_item {
    display:flex;
    flex: 1;
    //float: left;
    margin-right: 1px;
}
/*Style for menu links*/
li.nav_item a {
    display:block;
    min-width:140px;
    width: 100%;
    height: 50px;
    text-align: center;
    line-height: 50px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    color: #fff;
    background: #2f3036;
    text-decoration: none;
}
/*Hover state for top level links*/
li.nav_item:hover a {
    background: #19c589;
}
/*Style for dropdown links*/
li.nav_item:hover ul a {
    background: #f3f3f3;
    color: #2f3036;
    height: 40px;
    line-height: 40px;
}
/*Hover state for dropdown links*/
li.nav_item:hover ul a:hover {
    background: #19c589;
    color: #fff;
}
/*Hide dropdown links until they are needed*/
li.nav_item ul {
    display: none;
}
/*Make dropdown links vertical*/
li.nav_item ul li {
    display: block;
    float: none;
}
/*Prevent text wrapping*/
li.nav_item ul li a {
    width: auto;
    min-width: 100px;
    padding: 0 20px;
}
/*Display the dropdown on hover*/
ul li a:hover + .hidden, .hidden:hover {
    display: flex;
    flex-direction: column;
}
/*Style 'show menu' label button and hide it by default*/
.show-menu {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    text-decoration: none;
    color: #fff;
    background: #19c589;
    text-align: center;
    padding: 10px 0;
    display: none;
}
/*Hide checkbox*/
input[type=checkbox]{
    display: none;
}
/*Show menu when invisible checkbox is checked*/
input[type=checkbox]:checked ~ #menu{
    display: block;
}
/*Responsive Styles*/
@media screen and (max-width : 760px){
    /*Make dropdown links appear inline*/
    ul#menu {
        position: static;
        display: none;
    }
    /*Create vertical spacing*/
    li {
        margin-bottom: 1px;
    }
    /*Make all menu links full width
    ul#menu li, li a {
        width: 100%;
    }*/
    /*Display 'show menu' link*/
    .show-menu {
        display:block;
    }
}
</style>
<div class="wrapper">
  <label for="show-menu" class="show-menu">&#9776;</label>
  <input type="checkbox" id="show-menu" role="button">
  <ul id="menu">
      <li class="nav_item"><a href="/">Home</a></li>
      <li class="nav_item"><a href="/sessions/new">Login</a></li>
      <li class="nav_item"><a href="/users/new">Register</a></li>
      <%= navbar_quiz_links %>
  </ul>
</div>
