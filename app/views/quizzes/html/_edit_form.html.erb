<%= form_with :url => quiz_path(@quiz.id), :quiz_id => @quiz.id, method: :put do |form| %>
    <div class="form-group">
    <%= form.label :quiz_name, "Quiz Name: "  %>
    <%= form.text_field :quiz_name, :class => "form-control" %>
    </div>
    <div class="form-group">
    <%= form.label :quiz_category, "Quiz Category: " %>
    <%= form.text_field :quiz_category, :class => "form-control" %>
    </div>
    <div class="form-group">
    <%= form.label :quiz_description, "Quiz Description: " %>
    <%= form.text_field :quiz_description, :class => "form-control" %>
    </div>
    <%= hidden_field_tag "#{@quiz.question}", @quiz.name, { :id => "hidden_quiz_name"} %>
    <%= hidden_field_tag "#{@quiz.category}", @quiz.category, { :id => "hidden_quiz_category"} %>
    <%= hidden_field_tag "#{@quiz.description}", @quiz.description, { :id => "hidden_quiz_description"} %>
    
    <%= hidden_field_tag :quiz_id, @quiz.id %>
    <div class="btn_container">
        <%= form.submit "Update Quiz", :class => "btn btn-primary" %> 
        <%= link_to "Back", quiz_path(@quiz.id), :class => "btn waves-effect waves-light back_link" %>
    </div>
    <% end %>