<!DOCTYPE html>
<html>
  <head>
    <title>QuizGame</title>
  </head>
 
  <body>
      <%= render_welcome_message %>
      <% if flash[:notice] %>
        <h3><%= flash[:notice] %></h3>
      <% end %>
        <ul class="action_panel">
        </ul>
        <h6 class="main_heading_instructions"><strong>Select A Quiz And Test Your Knowledge! To Add More Quizzes Please Login Or Register.</strong></h6>        
        <div class="quiz_links_container">
        <% @quiz_categories.each do |quiz_category| %>
            <div class="quiz_link_section">
            <h5><%= quiz_category["category"].strip %></h5>
              <% @quizzes.each do |quiz| %>
                  <% if quiz_category["category"].strip == quiz.category.strip %>
                      <%= link_to quiz.name, quiz_path(quiz.id), :class => "quiz_link", :id => "quiz#{quiz.id}" %>
                      <br/>
                  <% end %>
              <% end %>
            </div>
        <% end %>
        </div>

  </body>
</html>

