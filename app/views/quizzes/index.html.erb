<!DOCTYPE html>
<html>
  <head>
    <title>QuizGame</title>
  </head>
 
  <body>
      <%= render_welcome_message %>
      <% if flash[:notice] %>
        <h3><%= flash[:notice] %></h3>
      <% end %>
        <ul>
            <%= render_login_link %>
            <%= render_register_link %> 
            <% if session[:user_id] %>
              <li><%= link_to "User Profile", user_path(@user.id), id: "user_profile_link" %></li>
              <li><%= link_to "Questions", questions_path, id: "questions_link" %></li>
            <% end %>
            <%= render_logout_link %>
            <% if false %><% link_to "Logout", sessions_path, method: :delete %><% end %>
        </ul>
        <strong>Select A Quiz And Test Your Knowledge! To Add More Quizzes Please Login Or Register.</strong>
        <h3 id="category_heading">Quiz Categories</h3>
        <% @quiz_categories.each do |quiz_category| %>
            <h5><%= quiz_category["category"] %></h5>
            <% @quizzes.each do |quiz| %>
                <% if quiz_category["category"] === quiz.category %>
                    <%= link_to quiz.name, quiz_path(quiz.id), :class => "quiz_link", :id => "quiz#{quiz.id}" %>
                    <br/>
                <% end %>
            <% end %>
        <% end %>
        <%= render_quizzes_restfull_routes %>
        <%= button_to "Back", root_url, :id => "back_link", :class => "btn btn-dark", method: :get %>

  </body>
</html>

