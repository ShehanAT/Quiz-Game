

<div id="quiz_info_section">
<h1>Quiz Info</h1>
<% if flash[:success] %>
    <div class="alert alert-primary" role="alert">
        <h3><%= flash[:success] %></h3>
    </div>
<% end %>


<h3>Title: <%= @quiz.name %></h3>
<h3>Category: <%= @quiz.category %></h3>
<h3>Description: <%= @quiz.description %></h3>
<% if @quiz.contains_images === 1 %>
    <h3>Quiz Type: Image Quiz</h3>
<% elsif @quiz.contains_images === 0 %>
    <h3>Quiz Type: Text Quiz</h3>
<% end %>
<% if session[:user_id] %>
    <h3 id="highscore_message">Your Best Score For This Quiz: <strong><%= @highScore %></strong></h3>
<% end %>
<% if !@takeQuiz %>
    <p class="form-text disable_take_quiz error" >* You Must Add Some Questions To Take This Quiz</p>
<% end %>
    <div class="btn_container" id="quiz_btn_container">
    <% if session[:user_id] %>
        <%= button_to "Add More Questions", new_question_path, :id => "add_questions_link", :class => "btn btn-primary", method: :get %>
        <%= button_to "Edit This Quiz", edit_quiz_path(@quiz.id), :id => "edit_quiz_link", :class => "btn btn-primary",method: :get %>
        <button class="btn btn-danger" id="delete_quiz_link" onclick="showDeleteModal()" >Delete This Quiz</button>
    <% end %>
    <% if !@takeQuiz %>
        <%= button_to "Take this Quiz!", quiz_path(@quiz.id), :remote => true, :class => "btn btn-success", :id => "take_quiz_link", method: :get, :disabled => true %>
    <% else %>
        <%= button_to "Take this Quiz!", quiz_path(@quiz.id), :remote => true, :class => "btn btn-success", :id => "take_quiz_link", method: :get %>
    <% end %>
    <%= button_to "Back", root_url, :id => "back_link", :class => "btn btn-dark", method: :get %>
    </div>
</div>
<%= render_answer_links %>
<%= render_end_game_message %>
<%= render partial: "quizzes/html/delete_quiz_modal" %>
<script>
    <%= render partial: "quizzes/js/delete_quiz.js.erb" %>
</script>