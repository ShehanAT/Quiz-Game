<h1>Welcome to Quiz Game</h1>
<%= form_tag "/start" do %>
    <h2>Hello <%= session[:username] %></h2>

    <%= select_tag(:collection_select, options_for_select([["Sample Collection 1",1],["Sample Collection 2",2],["Sample Collection 3",3]]), include_blank: "Pick a Collection") %>
    <%= button_tag "Start Quiz", :type => :submit, :id => :startQuizButton %>
<% end %>