<h3>You are currently adding questions to quiz:"<%= @quiz.name %>"</h3>
<ul>  
<li>Name: <%= @quiz.name %></li>
<li>Category: <%= @quiz.category %></li>
<li>Description: <%= @quiz.description %></li>
<li>Total Questions: <%= @quiz.total_questions %></li>
</ul>
<div class="main_container container">
  <div class="row">
    <div class="add_question_section col-md-6" value="1">
      <div id="question_errors">
      </div>
      <h3 id="add_questions_message">New Question #1: </h3>
    
      <%= label_tag(:question, "New Question:") %>
      <%= text_field_tag :question %>
      <br />
      <%= label_tag(:answer1, "Answer Choice #1:") %>
      <%= text_field_tag :answer1 %>
      <br />
      <%= label_tag(:answer2, "Answer Choice #2:") %>
      <%= text_field_tag :answer2 %>
      <br />
      <%= label_tag(:answer3, "Answer Choice #3:") %>
      <%= text_field_tag :answer3 %>
      <br />
      <%= label_tag(:answer4, "Answer Choice #4:") %>
      <%= text_field_tag :answer4 %>
      <br />
      <%= label_tag(:correct_answer, "Choose The Correct Answer: ") %>
      <input type="checkbox" class="radio" value="1" name="answer1" />Answer #1</label>
      <label>
        <input type="checkbox" class="radio" value="2" name="answer2" />Answer #2</label>
      <label>
        <input type="checkbox" class="radio" value="3" name="answer3" />Answer #3</label>
      <label>
        <input type="checkbox" class="radio" value="4" name="answer4" />Answer #4</label>
      <br />
    </div>
    <div class="col-md-6">
      <button onclick="addAnotherQuestion()" id="add_question_link" class="btn btn-secondary">Add Another Question</button>
      <button onclick="saveQuestion()" class="btn btn-primary">Save And Exit</button>
    </div>
  </div>
 

 
</div>
<script>
var questionArr = [];
$('input[type="checkbox"]').on('change', function() {
   $('input[type="checkbox"]').not(this).prop('checked', false);
});

function addAnotherQuestion(){
  var newQuestion = {
    questionName: $("#question").val(),
    answer1: $("#answer1").val(),
    answer2: $("#answer2").val(),
    answer3: $("#answer3").val(),
    answer4: $("#answer4").val(),
    correctAnswer: $("input:checked").val()
  }
  questionArr.push(newQuestion);
  $(".add_question_section").find("h3#add_questions_message").text(`New Question #${questionArr.length + 1}`);
  console.log(questionArr);
  emptyTextField();
}

function emptyTextField(){
  $("#question").val("");
  $("#answer1").val("");
  $("#answer2").val("");
  $("#answer3").val("");
  $("#answer4").val("");
}
</script>
