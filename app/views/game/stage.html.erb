

<h1>This is the stage for the Quiz Game</h1>

<%= render_quiz_question(@quiz) %>
<h2 id="score"> Your Score: 0</h2>
<% if @answers %>
    <% @answers.each do |answer| %>
        <%= button_to "#{answer.answer}", games_path(quizId: @quiz.id, answerId: "#{answer.answerId}"), remote: true, method: :post, id: "answer#{answer.answerId}" %> 
    <% end %>
<% end %>


