

<h1>Question Time!</h1>

<%= render_quiz_question(@question) %>
<h2 id="score"> Your Score: 0</h2>
<% if @answers %>
    <% @answers.each do |answer| %>
        <%= button_to "#{answer.answer}", games_path(questionId: @question.id, answerId: "#{answer.answerId}"), remote: true, method: :post, id: "answer#{answer.answerId}" %> 
    <% end %>
<% end %>


