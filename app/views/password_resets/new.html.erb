
<%= form_with(url: password_resets_path) do |form| %>

<%= form.label(:email, "Enter The Email Address Associated With Your Account: ") %>
    <div id="send_reset_email_errors" >
        <% if flash[:notice] %>
            <p class="error"><%= flash[:notice] %></p>
        <% end %>
    </div>
<small class="text-muted">We will email you a link that will allow you to reset your password</small>
<div class="form-group">
    <%= form.text_field(:email, :class => "form-control", :placeholder => "Enter your email" ) %>   
</div> 
</br>
<button id="reset_password_submit" class="btn waves-effect waves-light" type="submit" >Reset Password<i class="material-icons left">update</i></button>

<% end %>